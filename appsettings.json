{
  "Serilog": {
    "Using": [ 
      "Serilog.Sinks.Graylog",
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Confluent.Kafka.Producer": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "Graylog",
        "Args": {
            "hostnameOrAddress": "localhost",
            "port": "12201",
            "transportType": "Udp"
        }
      },
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "Consumer": {
      "group.id": "attendanceservice"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Database=attendanceservice; Host=localhost:5432; Username=postgres; Password=postgres;"
  },
}
